{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "compilerOptions": {
        "types": ["jest", "chrome", "node"],
    },

    "types": [
        // (various types, e.g. jquery, core-js),
        "chrome"
    ],

    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
    ],

    "exclude": [
        "node_modules/*",
        "src/**/*.svelte",
        "public/*",
        "src/scripts/*.wasm"
    ]
}